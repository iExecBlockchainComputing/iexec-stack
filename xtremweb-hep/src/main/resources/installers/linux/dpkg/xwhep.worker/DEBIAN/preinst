LOGDATE=`date "+%Y%m%d%H%M%S"`
WHAT="preinst"
LOG="/var/log/xwhep-worker.log"
XW_INSTALLDIR="/opt/xwhep-worker-@XWVERSION@"
BINDIR="$INSTALLDIR/bin"
PROG="xtremweb.worker"
SYSLOGIN=@XWUSER@
GROUPE=${SYSLOGIN}

touch ${LOG}
date >> ${LOG}  2>&1
echo "XtemWeb-HEP ${PROG} ${WHAT} @XWVERSION@" >> ${LOG} 2>&1


if [ "X${SYSLOGIN}" != "X" ] ; then
    echo "Creating system login to run the middleware ${SYSLOGIN}" >> ${LOG} 2>&1
    echo "(so that xwhep does not run with privileged account)" >> ${LOG} 2>&1
    mkdir -p /home/${SYSLOGIN} >> ${LOG} 2>&1
    /usr/sbin/groupadd ${SYSLOGIN} >> ${LOG} 2>&1
    /usr/sbin/useradd ${SYSLOGIN} -d /home/${SYSLOGIN} -s /bin/bash -g $GROUPE -m >> ${LOG} 2>&1

else
    echo "SYSLOGIN variable is not set; this package will run as root; this is not agood idea" >> ${LOG} 2>&1
fi

rm -Rf /tmp/xtremweb.worker*
rm -Rf /tmp/xtremweb.monitor*
rm -Rf /tmp/PortMapper.jni*
rm -f /tmp/XwTracer.jni*
rm -f /tmp/XWUtil.jni*
rm -Rf /tmp/XW.WORKER*

rm -Rf ${XW_INSTALLDIR}  >> ${LOG} 2>&1
mkdir -p ${XW_INSTALLDIR}  >> ${LOG} 2>&1
cd ${XW_INSTALLDIR} >> ${LOG} 2>&1


echo "XtemWeb-HEP ${PROG} ${WHAT} done" >> ${LOG} 2>&1
